<%- include ../partials/header.ejs %> 

<div >
    <h1><%= title %></h1>
    <div>
        <ul class="collection with-header">
            <li class="collection-header"><h4>Welcome to <%= title %></h4></li>
            <% cafeterias.forEach(function (c) { %>
                <li class="collection-item avatar">
                    <img src= <%=c.image %> alt="" class="circle">
                    <span class="title"><%= c.name %></span>
                    <p><%= c.location %><br>
                    Dine-in <%= c.dineIn ? '\u2705' : '\u274C' %> 
                    &#9830 Curbside Pickup <%= c.takeout ? '\u2705' : '\u274C' %> 
                    &#9830 Delivery <%= c.delivery ? '\u2705' : '\u274C' %>
                    </p>
                    <a href="cafeterias/<%= c._id %>" class="secondary-content"><i class="material-icons">description</i></a>
                </li>
            <% }) %>
        </ul>
    </div>

</div>
<%- include ../partials/footer.ejs %>